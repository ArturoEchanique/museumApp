<div class="container">
    <form class="row g-4" id="generate" action="/create-collection" method="POST">
        <h2>New Collection: {{searchParams}}</h2>
        <hr>
        <div class="col-md-12">

            <input type="text" id="title" class="form-control" placeholder="Título" name="title">
        </div>
        <div class="col-md-12">
            <input type="text" id="description" class="form-control" placeholder="Descripción" name="description">
        </div>
        <div class="col-md-12">
            <input type="text" id="bgImage" class="form-control" placeholder="Image" name="bgImage">

        </div>
        <div>
            <input type="hidden" id="artIds" name="artItemsList" value={{artIds}}>
            <input type="hidden" id="searchParams" name="searchParams" value={{searchParams}}>
        </div>
        <div class="col-12" style="width: 25px;">
            <button class="btn btn-secondary" id="btn" type="submit">Save Collection</button>
        </div>
    </form>
</div>

