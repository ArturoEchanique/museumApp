<div class="container">
    <h3 id="titU">Ususarios</h3>
    <div class="row">
        {{#each user}}
        <div class="card col-6" style="width: 18rem;">
            <img src="{{profileImg}}" class="card-img-top" alt="#">
            <div class="card-body">
                <h5 class="card-title">{{username}}</h5>
                <p class="card-text">{{email}}</p>
                <p class="card-text">{{role}}</p>
                <p class="card-text">{{favorites}}</p>
                <a href="/users/{{id}}" class="btn btn-primary">Ver Perfil</a>
                <hr>
                {{!-- {{#if roleCheck}} --}}
                <a href="/users/{{id}}/edit" class="btn btn-primary">Editar</a>
                <form action="/users/{{id}}/delete" method="POST">
                    <button class="btn btn-primary">Eliminar</button>
                </form>
                {{!-- {{/if}} --}}
            </div>
        </div>
        {{/each}}
    </div>

</div>